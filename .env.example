# Copy this file to .env and set your own values. Never commit .env.

# Database (used by docker-compose for PostgreSQL container and by app)
POSTGRES_USER=reposition_user
POSTGRES_PASSWORD=set_a_secure_password
POSTGRES_DB=reposition_db

# Full DB URL for Node and Python (local dev: point to localhost; Docker: set in compose)
DATABASE_URL=postgresql://reposition_user:set_a_secure_password@localhost:5432/reposition_db

# Session signing key (use a long random string in production)
SESSION_SECRET=set_a_long_random_secret
